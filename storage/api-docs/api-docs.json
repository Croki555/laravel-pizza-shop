{
    "openapi": "3.0.0",
    "info": {
        "title": "Laravel Pizza Shop API",
        "description": "API Documentation for Pizza Shop",
        "contact": {
            "email": "support@pizzashop.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost",
            "description": "Main API Server"
        }
    ],
    "paths": {
        "/api/users": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Список пользователей",
                "operationId": "c457726701591d1183b53aa71fc13441",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/User"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Создание нового пользователя",
                "operationId": "592819a0265360b2014512d6dbfaf0e7",
                "requestBody": {
                    "description": "Данные пользователя",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "name": {
                                        "description": "ФИО пользователя",
                                        "type": "string",
                                        "example": "Иван Иванов"
                                    },
                                    "email": {
                                        "description": "Email пользователя",
                                        "type": "string",
                                        "format": "email",
                                        "example": "ivan@example.com"
                                    },
                                    "password": {
                                        "description": "Пароль (минимум 8 символов, только английские буквы и цифры)",
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    },
                                    "password_confirmation": {
                                        "description": "Подтверждение пароля",
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Пользователь успешно создан",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "User": {
                                            "$ref": "#/components/schemas/User"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Error: Unprocessable Content",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Email обязателен для заполнения"
                                        },
                                        "errors": {
                                            "properties": {
                                                "email": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "Email обязателен для заполнения"
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/{id}": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Получить пользователя по ID",
                "operationId": "36a33ff774d5cba33c039dec2c3e0287",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "User ID",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User details",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "user": {
                                            "$ref": "#/components/schemas/User"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "User not found"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "Cart": {
                "required": [
                    "user_id",
                    "product_id",
                    "quantity"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "user_id": {
                        "description": "ID пользователя, которому принадлежит корзина",
                        "type": "integer",
                        "example": 1
                    },
                    "product_id": {
                        "description": "ID продукта в корзине",
                        "type": "integer",
                        "example": 5
                    },
                    "product": {
                        "$ref": "#/components/schemas/Product"
                    },
                    "quantity": {
                        "description": "Количество товара",
                        "type": "integer",
                        "example": 2
                    },
                    "created_at": {
                        "description": "Дата создания записи",
                        "type": "string",
                        "example": "2023-01-01T12:00:00Z"
                    },
                    "updated_at": {
                        "description": "Дата последнего обновления",
                        "type": "string",
                        "example": "2023-01-01T12:00:00Z"
                    }
                },
                "type": "object"
            },
            "Category": {
                "required": [
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "description": "Название категории",
                        "type": "string",
                        "example": "Пицца"
                    }
                },
                "type": "object"
            },
            "Order": {
                "required": [
                    "user_id",
                    "phone",
                    "email",
                    "delivery_address"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "user_id": {
                        "description": "ID пользователя",
                        "type": "integer",
                        "format": "int64",
                        "example": 4
                    },
                    "user": {
                        "$ref": "#/components/schemas/User"
                    },
                    "phone": {
                        "description": "Номер телефона",
                        "type": "string",
                        "example": "+79214074603"
                    },
                    "email": {
                        "description": "Электронная почта",
                        "type": "string",
                        "format": "email",
                        "example": "denis.fad@example.com"
                    },
                    "delivery_address": {
                        "description": "Адрес доставки",
                        "type": "string",
                        "example": "Улица Шевченко дом 3 корпус 2, кв 92 этаж 9"
                    },
                    "status_id": {
                        "description": "ID статуса заказа",
                        "type": "integer",
                        "format": "int64",
                        "example": 4
                    },
                    "status": {
                        "$ref": "#/components/schemas/Status"
                    },
                    "created_at": {
                        "description": "Дата создания",
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-01-01T12:00:00Z"
                    },
                    "updated_at": {
                        "description": "Дата обновления",
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-01-01T12:00:00Z"
                    }
                },
                "type": "object"
            },
            "OrderItem": {
                "required": [
                    "order_id",
                    "product_id",
                    "quantity"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "order_id": {
                        "description": "ID заказа",
                        "type": "integer",
                        "format": "int64",
                        "example": 24
                    },
                    "order": {
                        "$ref": "#/components/schemas/Order"
                    },
                    "product_id": {
                        "description": "ID продукта",
                        "type": "integer",
                        "format": "int64",
                        "example": 5
                    },
                    "product": {
                        "$ref": "#/components/schemas/Product"
                    },
                    "quantity": {
                        "description": "Колличество данного продукта",
                        "type": "integer",
                        "format": "int64",
                        "example": 9
                    },
                    "created_at": {
                        "description": "Дата создания",
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-01-01T12:00:00Z"
                    },
                    "updated_at": {
                        "description": "Дата обновления",
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-01-01T12:00:00Z"
                    }
                },
                "type": "object"
            },
            "Product": {
                "required": [
                    "name",
                    "description",
                    "price",
                    "category_id"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "category_id": {
                        "description": "ID категории продукта",
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "category": {
                        "$ref": "#/components/schemas/Category"
                    },
                    "name": {
                        "description": "Название продукта",
                        "type": "string",
                        "example": "Пепперони"
                    },
                    "description": {
                        "description": "Описание продукта",
                        "type": "string",
                        "example": "Пицца с колбасками пепперони и сыром"
                    },
                    "price": {
                        "description": "Цена продукта",
                        "type": "number",
                        "format": "float",
                        "example": 12.99
                    },
                    "created_at": {
                        "description": "Дата создания",
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-01-01T12:00:00Z"
                    },
                    "updated_at": {
                        "description": "Дата обновления",
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-01-01T12:00:00Z"
                    },
                    "deleted_at": {
                        "description": "Дата удаления (мягкое удаление)",
                        "type": "string",
                        "format": "date-time",
                        "example": null,
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "Status": {
                "required": [
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "description": "Название статуса",
                        "type": "string",
                        "example": "В обработке"
                    }
                },
                "type": "object"
            },
            "User": {
                "required": [
                    "name",
                    "email",
                    "password"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "name": {
                        "description": "Имя/Фамилия",
                        "type": "string",
                        "example": "Денис Фадыров"
                    },
                    "email": {
                        "description": "Электронная почта",
                        "type": "string",
                        "format": "email",
                        "example": "denis.fad@example.com"
                    },
                    "password": {
                        "description": "Пароль",
                        "type": "string",
                        "format": "password",
                        "example": "secret123"
                    },
                    "created_at": {
                        "description": "Дата создания",
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-01-01T12:00:00Z"
                    },
                    "updated_at": {
                        "description": "Дата обновления",
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-01-01T12:00:00Z"
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Users",
            "description": "API Endpoints for Users"
        }
    ]
}